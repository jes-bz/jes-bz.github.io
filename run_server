#!/bin/bash

# This script starts a simple HTTP server using Python's built-in http.server module
# It requires Python 3 and uv to be installed

# Check if uv is installed
if ! command -v uv &> /dev/null
then
    echo "uv could not be found. Please install uv to run the server."
    exit 1
fi

# Start the HTTP server on port 8000
echo "Starting HTTP server on http://localhost:8000"
uv run python -m http.server 8000
